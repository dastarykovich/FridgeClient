@using FridgeClient.Models.DataTransferObjects;
@model UserForAuthenticationDto;
@{
    ViewData["Title"] = "Login";
}

<h1>Log in</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" action="Login">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
            </div>

            <br />

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
            </div>

            <br />

            <button type="submit" class="btn btn-outline-info">Log in</button>
        </form>

        <br />
        @Html.ActionLink("Back", "Index", "Home", null, new { @class = "btn btn-outline-secondary" })
    </div>
</div>